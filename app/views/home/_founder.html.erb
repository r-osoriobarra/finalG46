<div id="add" class="mb-4">
    <%= link_to 'Agregar un proyecto', new_project_path, class:'btn btn-primary'  %>
    <%= link_to 'Agregar una causa', new_cause_path, class:'btn btn-success'  %>
</div>


<% @cause.in_groups_of(2, false).each do |group| %>
    <div class="row">
        <% group.each do |cause| %>
            <div class="col">
                <div class="card">
                    <img src="https://www.somosiberoamerica.org/wp-content/uploads/2021/09/NOTA2-Empresas-y-medioambiente-980x653.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h3 class="card-title font-weight-bold"><%= cause.title %></h3>
                        <div class="row">
                            <div class="col">
                                <p><%=(cause.story).truncate(200) %></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col text-center">
                                <strong>Meta:</strong>
                                <strong>[0 -------Barra de meta ------ <%= cause.goal %> pts]</strong>
                            </div>
                        </div>
                        <div class="row my-5">
                            <div class="col">
                                <strong>Desde:</strong><%= cause.start_date %>
                            </div>
                            <div class="col">
                                <strong>Hasta: </strong><%= cause.end_date %>
                            </div>
                            <div class="col">
                                <strong>Recompensa: </strong><%= cause.reward %>
                            </div>
                        </div>
                        <div class="row">
                                <div class="col">
                                    <%= link_to 'Ver mÃ¡s',publication_path(cause.id), class:'btn btn-primary'%>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<% end %>




