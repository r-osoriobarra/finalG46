<div class="container">
    <%= form_with(model: [cause, comment], local: true) do |f| %>
        <% if comment.errors.any? %>
            <div id="error_explanation" class="text-light">
                <h2><%= pluralize(comment.errors.count, "error") %> Este comentario no se pudo crear por las siguientes razones:</h2>
                <ul>
                    <% comment.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    
        <div class="form-group" readonly>
            <%= f.text_area :comment, class:'form-control form-control-lg', placeholder: "Comenta!"  %>
        </div>

        <div class="actions">
            <%= f.submit "Comenta",class:'btn btn-primary'%>
        </div>
    <% end %>
</div>