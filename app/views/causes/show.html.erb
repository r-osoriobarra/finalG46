<div id="cause" class="container" style="padding-bottom: 0em;">
    <h1><%= @cause.title %></h1>
    <strong>Titulo: </strong>
    <p><%= @cause.title %></p>
    
    <strong>Descripcion: </strong>
    <p><%= @cause.story %></p>

    <strong>Fecha de inicio: </strong>
    <p><%= @cause.start_date %></p>

    <strong>Fecha de termino: </strong>
    <p><%= @cause.end_date %></p>

    <strong>Meta: </strong>
    <p><%= @cause.goal %></p>

    <strong>Recompensa: </strong>
    <p><%= @cause.reward %></p>

    <strong>Emprendimiento: </strong>
    <p><%= @cause.project.name %></p>
    <%= link_to 'Editar', edit_cause_path(@cause.id), local: true %> |
    <%= link_to 'Eliminar', cause_path(@cause.id), method: :delete,  local: true, data: {confirm: 'EstÃ¡s seguro que quieres eliminar esta causa?'} %> |
    <%= link_to 'Volver', profile_path(current_user) %>
</div>

