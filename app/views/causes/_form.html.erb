<div class="container pb-5">
        <div class="container new-cause-form">
            <h1 class="text-center mb-4">Completa el formulario y publica una causa para tu emprendimiento</h1>
            <%= form_with(model: cause, remote: true) do |f| %>
                <% if cause.errors.any? %>
                    <div id = 'error_explanation'>
                        <h2>La publicacion no se pudo crear por las siguientes razones:</h2>
                        <ul>
                            <% cause.errors.full_messages.each do |msg|%>
                                <li><%= msg %></li>
                        <% end %>
                        </ul>
                    </div>  
                <% end %>
                
                <div class="form-group">
                    <%= f.label :project_id, "Emprendimiento: " %><br>
                    <%= f.collection_select :project_id, @projects, :id, :name, size: '50x1'  %>
                </div>
                
                <div class="form-group">
                    <%= f.label :title, "¿Cuál será el título de tu causa en la publicación? "%><br>
                    <%= f.text_field :title, size: '50x1' %>
                </div>

                <div class="form-group">
                    <%= f.label :story, "Describe porqué necesitas la ayuda de nuestros apañadores " %><br>
                    <%= f.text_area :story, size: '50x4',placeholder:"Escribe en detalle la información relevante para pedir colaboración" %>
                </div>   

                <div class="form-group">
                    <%= f.label :start_date, "Fecha de inicio la publicación: " %><br>
                    <%= f.date_field :start_date, size: '50x1' %>
                </div>  

                <div class="form-group">
                    <%= f.label :end_date, "Fecha de termino la publicación: " %><br>
                    <%= f.date_field :end_date %>
                </div>

                <div class="form-group">
                    <%= f.label :goal, "Indica con cuánto dinero puedes financiar esta causa (en $CLP)" %><br>
                    <%= f.number_field :goal, class:"goalnumber" %>
                </div>

                <div class="form-group">
                    <%= f.label :reward, "Ofrece una recompensa a los apañadores (opcional)" %><br>
                    <%= f.text_field :reward, size: '50x1', placeholder:"Por ejemplo, descuentos(%) en la primera compra en tu tienda..." %>
                </div>


                <div class = 'actions'>
                    <%= f.submit "Publica tu causa" %>
                </div>
            <% end %>
        </div>
</div>
