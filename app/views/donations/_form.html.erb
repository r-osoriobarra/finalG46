<div class="new-donation container text-center">
    <%= form_with(model: [cause, donation], remote: true) do |f| %>
        <% if donation.errors.any? %>
            <div id = 'error_explanation'>
                <h2>La donación no se pudo crear por las siguientes razones:</h2>
                <ul>
                    <% donation.errors.full_messages.each do |msg|%>
                        <li><%= msg %></li>
                <% end %>
                </ul>
            </div>
        <% end %>

        <div class="text-light pts1 box">
            <p><span class="font-weight-bold">ApañaPunto</span><br> equivale a una donación de $1000 CLP</p>
        </div>
        <hr>
        <div class="text-light pts2 box">
            <p><span class="font-weight-bold">SuperPunto</span><br> equivale a una donación de $2000 CLP</p>
        </div>
        <hr>
        <div class="text-light pts3 box">
            <p><span class="font-weight-bold">MegaPunto</span><br> equivale a una donación de $3000 CLP</p>
        </div>
        <hr>
        <div class="text-light pts4 box">
            <p><span class="font-weight-bold">HiperPunto</span><br> equivale a una donación de $4000 CLP</p>
        </div>
        
        <div class="form-group mt-3 mb-2">
            <%= f.collection_select(:point_id, @points, :id, :name, include_blank: 'Selecciona') %>
        </div>

        <div class="form-group mt-0">
            <%= f.number_field :quantity, class:'form-control text-center', min: 0 %>
        </div>

        <div class = 'actions'>
            <%= f.submit "DONAR", disabled: true %>
        </div>
    <% end %>
</div>