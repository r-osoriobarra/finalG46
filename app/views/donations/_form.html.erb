<%= form_with(model: [@cause, donation], remote: true) do |f| %>
    <% if donation.errors.any? %>
        <div id = 'error_explanation'>
            <h2>La donación no se pudo crear por las siguientes razones:</h2>
            <ul>
                <% donation.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :point_id, "Elige el tipo de punto: "%>
        <%= f.collection_select(:point_id, @points, :id, :name) %>
    </div>

    <div class="form-group">
        <%= f.label :quantity, "Cantidad de ApañaPuntos: "%>
        <%= f.number_field :quantity, class:'form-control', min: 0 %>
    </div>

    <div class = 'actions'>
        <%= f.submit %>
    </div>
<% end %>