<%= form_with(model: donation, remote: true) do |f| %>
    <% if donation.errors.any? %>
        <div id = 'error_explanation'>
            <h2>La donación no se pudo crear por las siguientes razones:</h2>
            <ul>
                <% donation.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class="form-group">
        <%= f.label :amount, "Cantindad a donar: "%>
        <%= f.number_field :amount %>
    </div>

    <div class="form-group">
        <%= f.label :title, "Título: " %>
        <%= f.text_field :title %>
    </div>   

    <div class="form-group">
        <%= f.label :message, "Mensaje: " %>
        <%= f.text_field :message %>
    </div>  

    <div class = 'actions'>
        <%= f.submit %>
    </div>
<% end %>